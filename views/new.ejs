<% layout("layouts/boilerplate.ejs"); %>
<div class="row mt-4">
<div class="col-8 offset-2 ">

    <h3>Take new note</h3>
    <form action="/notes" method="post" novalidate class="needs-validation">
        <div>
        <label for="title" class="form-label">Title</label>
        <input placeholder="notes title" name="title" id="title" class="form-control" required> <br> 
        </div>
        <div>
        <label for="description" class="form-label">Description</label>

            <textarea name="description" placeholder="description" id="description" class="form-control" required></textarea> <br>
        </div>
        <button class="btn btn-dark">Create Note</button>
    </form>
</div>
</div>

