<% layout("layouts/boilerplate.ejs"); %>

<div class="container py-4 bg-dark">
    <div class="row g-4">
        <% for (let note of notes) { %>
            <div class="col-sm-6 col-md-4 col-lg-3">
                <div class="card h-100 shadow-lg border-0 bg-gradient text-light" style="background: linear-gradient(135deg, #007bff, #0056b3);">
                    <div class="card-header text-center">
                        <h5 class="mb-0"><%= note.title %></h5>
                    </div>
                    <div class="card-body d-flex flex-column">
                        <p class="card-text flex-grow-1"><%= note.description %></p>

                        <div class="d-flex justify-content-between mt-3 note-actions" style="display: none;">
  <form method="get" action="/notes/<%= note._id %>/edit">
    <button class="btn btn-sm btn-dark" title="Edit">
      <i class="fa-solid fa-pen"></i>
    </button>
  </form>
  <form method="post" action="/notes/<%= note._id %>?_method=DELETE">
    <button class="btn btn-sm btn-danger" title="Delete">
      <i class="fa-solid fa-trash"></i>
    </button>
  </form>
</div>


                        <hr class="my-3 border-light">
                        <small class="text-light text-end d-block">
                            <i class="fa-regular fa-clock"></i>
                            <%= note.created_at.toLocaleTimeString() %>,
                            <%= note.created_at.toLocaleDateString() %>
                        </small>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</div>

